<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">


    <View
        android:id="@+id/background_layer"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:background="@drawable/reg_login_background"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.946"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.019" />

    <Button
        android:id="@+id/logout"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:backgroundTint="@android:color/transparent"
        android:fontFamily="@font/montserrat_medium"
        android:text="@string/logout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.941"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.018"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/user_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:text="Hello World!"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.285"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.031" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="206dp"
        android:layout_height="38dp"
        android:layout_marginTop="160dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/main_menu"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


    <FrameLayout
        android:id="@+id/frameLayout3"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_marginTop="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.0">

        <View
            android:id="@+id/background_layer2"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:background="@drawable/reg_login_background"
            android:visibility="visible" />

        <Button
            android:id="@+id/catalog_btn"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:backgroundTint="@android:color/transparent"
            android:fontFamily="@font/montserrat_medium"
            android:text="@string/catalog" />

    </FrameLayout>


    <FrameLayout
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_marginTop="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout3"
        app:layout_constraintVertical_bias="0.0">

        <View
            android:id="@+id/background_layer3"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:background="@drawable/reg_login_background"
            android:visibility="visible" />

        <Button
            android:id="@+id/configurator_btn"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:backgroundTint="@android:color/transparent"
            android:fontFamily="@font/montserrat_medium"
            android:text="@string/configurator" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>